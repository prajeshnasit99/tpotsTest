<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">

    <system>
        <section id="tpots_checkout" translate="label" type="text" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Checkout Settings</label>
            <tab>tpots</tab>
            <resource>TPots_JaPrajeshNasitCheckout::config</resource>
            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>General Settings</label>
                <field id="shipping_method" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Shipping Method To Block</label>
                    <source_model>TPots\JaPrajeshNasitCheckout\Model\Config\Source\ShippingMethods</source_model>
                </field>
                <field id="payment_method" translate="label" type="select" sortOrder="20"
                showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Payment Method To Block</label>
                    <source_model>TPots\JaPrajeshNasitCheckout\Model\Config\Source\PaymentMethods</source_model>
                </field>
            </group>
        </section>
    </system>
</config>